/ start l-main
%main.l-main.js-main
  .l-main-block
  .single
    %img.single-image{:alt => "", :src => asset_path("sample1.jpg")}/
    .l-container.u-clear
      %h1.single-title
        = @article.title
      %time.single-date{:datetime => @article.created_at.strftime('%F')}
        = @article.created_at.strftime("%d %b, %Y")
      %p.single-desc
        = @article.description
      %a.single-button{href: articles_path}
        .button
          %p.button-text Top
/ end l-main
/ end l-contents
